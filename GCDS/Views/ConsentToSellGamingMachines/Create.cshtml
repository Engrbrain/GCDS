                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Is_TrueOwnerOfMachine)
                                    @Html.ValidationMessageFor(model => model.Is_TrueOwnerOfMachine, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

