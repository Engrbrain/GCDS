                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Gaming Act, 2006 - Second Schedule - (Section 42)</h4>
                        <hr />
                        <p>Application for consent to sell, let on hire of otherwise dispose of a gambling machine or any interest therein</p>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <span class="control-label col-md-6">Gaming Equipment</span>
                            <div class="col-md-10">
                                @Html.DropDownList("GamingEquipmentId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.GamingEquipmentId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        

                        <div class="form-group">
                            <span class="control-label col-md-6">Full name of applicant</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FullNameOfApplicant, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FullNameOfApplicant, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Adress of the Applicant</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            <span class="control-label col-md-6">Nationality of Applicant</span>
                            <div class="col-md-10">
                                @Html.EnumDropDownListFor(model => model.Nationality, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <span class="control-label col-md-6">Make of Machine</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MakeOfMachine, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MakeOfMachine, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Serial Number</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SerialNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SerialNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Nature and Purpose of Transaction</span>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.NatureOfProposedTransaction, new { cols = 60, rows = 10, @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NatureOfProposedTransaction, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Nature of proposed buyer/hirer/consignee</span>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.NatureOfProposedBuyer_Hirer_Consignee, new { cols = 60, rows = 10, @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NatureOfProposedBuyer_Hirer_Consignee, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Address of proposed buyer/hirer/consignee</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.AddressOfProposedBuyer_Hirer_Consignee, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AddressOfProposedBuyer_Hirer_Consignee, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Nationality of proposed buyer/hirer/consignee</span>
                            <div class="col-md-10">
                                @Html.EnumDropDownListFor(model => model.NationalityOfProposedBuyer_Hirer_Consignee, htmlAttributes: new { @class = "form-control" })
