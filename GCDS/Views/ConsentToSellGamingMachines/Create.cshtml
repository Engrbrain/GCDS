                                @Html.EditorFor(model => model.ConsentDate, new { htmlAttributes = new { @class = "form-control", type ="date" } })
                                @Html.ValidationMessageFor(model => model.ConsentDate, "", new { @class = "text-danger" })
                            </div>
                        </div>


