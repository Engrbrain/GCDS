    <div class="m-content">
        <div class="m-portlet">
            <div class="m-portlet__body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <p>I hereby certify that the information provided herein is true. </p>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.AMLCompanyProfileId)
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.Is_Deleted)
                        @Html.HiddenFor(model => model.TimeStamp)
                   


             
                        <div class="form-group">
                            <span class="control-label col-md-2">Company Name</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CertificateName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CertificateName, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            <span class="control-label col-md-2"> Upload Signature (Scan your signed signature on a white paper and upload the image file)</span>
                            <div class="col-md-10">
                                @Html.TextBox("file", "", new { type = "file", @class = "custom-file-input" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-2">Certification Date</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CertificationDate, new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                                @Html.ValidationMessageFor(model => model.CertificationDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr />
                        <p>Directors completing this form should apply to the Director, Criminal Investigation Department (CID) for a police report. The Police report should be submitted under the seal of the Director of CID to the following address:</p>
                        <p>
                            The Commissioner <br />
                            Ghana Gaming Commission <br />
                            P.O. Box ……………… <br />
                            Accra. <br />
                        </p>
                        <p>NB: Under no circumstance should the applicant (Director) himself submit the report directly to the Gaming Commission.</p>
                        <div class="form-group">
                            <hr />
                            <span class="control-label col-md-2">Name of Applicant</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NameOfApplicant, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NameOfApplicant, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-2">Position to Be Held</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PositionToBeHeld, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PositionToBeHeld, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Modify" class="btn btn-Info" />
                                <a title="Back to List" id="sample_editable_1_new" href="@Url.Action("Index", "AMLBankAccounts")" class="btn btn-warning"><i class='fa fa-align-justify'></i> Back to List</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
