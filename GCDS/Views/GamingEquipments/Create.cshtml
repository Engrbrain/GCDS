                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <p>You can create a gaming equipment before its acquisition, hire or licensing and take the equipment through the entire importation, licensing and installation process</p>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                        <div class="form-group">
                            <span class="control-label col-md-6">Machine Name</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.EquipmentName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EquipmentName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="control-label col-md-6">Purpose of Machine</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PurposeOfEquipment, new { cols = 60, rows = 10, @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PurposeOfEquipment, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="control-label col-md-6">Date of Acquisition</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DateOfAquisition, new { htmlAttributes = new { @class = "form-control", type="date" } })
                                @Html.ValidationMessageFor(model => model.DateOfAquisition, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="control-label col-md-6">Machine Serial Number</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.EquipmentSerialNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EquipmentSerialNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="control-label col-md-6">Machine Manufacturer</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.EquipmentManfacturer, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EquipmentManfacturer, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Machine Model</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.EquipmentModel, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EquipmentModel, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Machine Location</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.EquipmentLocation, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EquipmentLocation, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Region</span>
                            <div class="col-md-10">
                                @Html.EnumDropDownListFor(model => model.Region, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Region, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="control-label col-md-6">Status</span>
                            <div class="col-md-10">
                                @Html.EnumDropDownListFor(model => model.CurrentStatus, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CurrentStatus, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        

